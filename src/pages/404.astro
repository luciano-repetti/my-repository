---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Portafolio - Luciano Repetti">
  <Header />
  <section
    class="w-[100%] h-[90svh] lg:h-[90vh] flex justify-center items-center flex-col gap-8"
  >
    <h1
      class="text-transparent bg-clip-text bg-gradient-to-r from-scooter-400 to-scooter-500 uppercase text-4xl lg:text-6xl font-bold"
    >
      ERROR 404
    </h1>
    <span class="text-white text-lg lg:text-2xl font-semibold"
      >Ups parece que te has perdido..</span
    >
    <a
      href="/"
      aria-label="Ir al perfil de linkendin"
      class="text-white text-sm lg:text-base uppercase font-semibold ml-3 p-2 lg:p-3 lg:px-4 pr-5 rounded-full border-2 border-scooter-400 cursor-pointer flex items-center lg:gap-1 transition-all duration-300 hover:bg-scooter-400"
      >Volver al sitio</a
    >
  </section>
</Layout>
